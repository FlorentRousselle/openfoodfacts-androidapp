<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.OFF.ErrorText" parent="@style/TextAppearance.Design.Error">
        <item name="android:textColor">@color/brand_red</item>
    </style>

    <style name="customSearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/md_light_appbar</item>
        <item name="queryBackground">@color/md_light_appbar</item>
    </style>

    <style name="Theme.OFF.NoActionBar" parent="Theme.OFF">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="searchViewStyle">@style/customSearchView</item>
    </style>

    <style name="DefaultButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">@color/grey_100</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Theme.OFF.QuestionDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>